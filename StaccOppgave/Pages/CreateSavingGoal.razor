@page "/CreateSavingGoal"
@layout MainLayout
@inject NavigationManager navigator
@inject UserService userService

<h3>New Saving Goal</h3>


<div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" class="form-control" @bind="title" />
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" class="form-control" @bind="description"></textarea>
</div>
<div class="form-group">
    <label for="price">Price</label>
    <input type="number" id="price" class="form-control" @bind="price" />
</div>
<br />
<button type="submit" class="btn btn-primary" @onclick="CreateNewSavingGoal" >Submit</button>
@if (!string.IsNullOrEmpty(errormessage))
{
    <div class="alert alert-danger">@errormessage</div>
}

@code {

    string? title;
    string? description;
    decimal price;
    string? errormessage;

    public async Task CreateNewSavingGoal()
    {
        if(string.IsNullOrEmpty(title) || string.IsNullOrEmpty(description))
        {
            errormessage = "Please fill in all fields";
            return;
        }
        if(price < 0)
        {
            errormessage = "The price must be a positive number";
            return;
        }
        try
        {
            var newSavingGoal = new
            {
                UserId = userService.UserId,
                Title = title,
                Description = description,
                Price = price
        };


            using (var client = new HttpClient())
            {
                var apiUrl = $"https://localhost:7064/SavingGoals/CreateSavingGoal";
                var response = await client.PostAsJsonAsync(apiUrl, newSavingGoal);


                if (response.IsSuccessStatusCode)
                {
                    navigator.NavigateTo("/home");
                }
                else
                {
                    errormessage = "Failed to create a SavingGoal. Please try again later.";
                }
            }
        }
        catch (Exception ex)
        {
            errormessage = "An error occurred: " + ex.Message;
        }
    }

}
